# Server
SERVER_PORT=4000
NODE_ENV=development
FRONTEND_ORIGIN=http://localhost:5174
API_BASE_URL=http://localhost:4000

# Sessions
SESSION_JWT_SECRET=change-me
SESSION_COOKIE_NAME=mt_session

# Logging
LOG_LEVEL=info        # debug | info | warn | error
PRETTY_LOGS=true      # pretty print in dev

# Rate Limiting (optional overrides)
# DISABLE_RATE_LIMIT=true           # ⚠️  SECURITY WARNING: Only use in test environments! Never in production!
# RATE_LIMIT_AUTH=120               # Auth endpoints rate limit (requests per minute, default: 120)
# RATE_LIMIT_GENERAL=600            # General API rate limit (requests per minute, default: 600)

# Database
DATABASE_URL=postgresql://postgres:password@host:5432/postgres
SHADOW_DATABASE_URL=postgresql://postgres:password@shadow-host:5432/postgres  # Required for migrations (pgvector extension)

# AI Chat Assistant
OPENAI_API_KEY=