{
  "name": "@acme/server",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/index.js",
    "lint": "echo \"(add ESLint later)\"",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "db:seed": "prisma db seed",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "openapi:lint": "redocly lint openapi.yaml",
    "openapi:preview": "openapi preview-docs openapi.yaml --port 8080",
    "openapi:serve": "pnpm dlx redoc-cli@latest serve openapi.yaml --watch --port 8080"
  },
  "dependencies": {
    "@prisma/client": "^6.16.2",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.19.2",
    "jose": "^6.1.0",
    "swagger-ui-express": "^5.0.1",
    "yaml": "^2.8.1",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@acme/config": "workspace:*",
    "@acme/types": "workspace:*",
    "@redocly/cli": "^2.2.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^24.5.2",
    "@types/swagger-ui-express": "^4.1.8",
    "ajv": "^8.17.1",
    "ajv-formats": "^2.1.1",
    "prisma": "^6.16.2",
    "tsx": "^4.7.0",
    "typescript": "^5.4.0"
  }
}
